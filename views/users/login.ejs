<!DOCTYPE html>
<html lang="en">
  <head>
    <!--HEAD -->
    <%- include('../partials/head') %>
  </head>
  <body class="bg-ligth-grey">
    <!--HEADER -->
    <%- include('../partials/header') %>

    <!--MAIN -->
    <main>
      <!--section para formulario-->
      <section
        class="container products-wrapper overflow-hidden form-login mt-5"
      >
        <form action="/login" method="get" class="form-field mt-3 pb-2">
          <div class="row">
            <div class="col-12">
              <label for="email" class="form-label">E-mail</label>
            </div>
            <div class="col-12">
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                placeholder="juanperez@mail.com"
              />
            </div>
            <!--cotraseña input-shadow-->
            <div class="col-12 mt-3">
              <label for="pass" class="form-label">Contraseña</label>
              <input
                type="password"
                name="pass"
                id="pass"
                class="form-control"
                placeholder="********"
              />
            </div>
            <!--recordar usuario y cotraseña-->
            <div class="text-align-c col-12 mt-5">
              <input
                type="checkbox"
                name="recordar"
                id="recordar"
                class="form-check-input"
              />
              <label for="recordar" class="form-label"
                >Recordar usuario y contraseña</label
              >
            </div>
            <!--boton-->
            <div class="col-12 align-center">
              <button type="submit" class="btn bg-pink btn-lg font-white reg">
                INICIA SESION
              </button>
            </div>
            <!--olvidaste contraseña-->
            <div class="col-12 text-align-c">
              <span
                ><a href="#" class="underline"
                  >¿Olvidaste tu contraseña?</a
                ></span
              >
            </div>
          </div>
        </form>
        <!--section ya tenes cuenta-->
        <div class="row mt-3">
          <div class="col-12 text-align-c">
            <label for="" class="form-label font-xlarge"
              >¿No tenés Cuenta?</label
            >
            <a href="/users/register" class="font-xlarge font-bold">
              Registrate</a
            >
          </div>
        </div>
      </section>
    </main>

    <!--FOOTER -->
    <%- include('../partials/footer') %>
  </body>
</html>
